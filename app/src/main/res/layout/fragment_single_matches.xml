<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:stretchColumns="1"
        android:background="@color/soothing_breeze">

        <TableRow
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/athletes"
                android:text="Athletes&#38;Scores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/athletesWithScore"
                android:text="Athletes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/date"
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/dateItemS"
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/city"
                android:text="City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/cityItemS"
                android:text="City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/country"
                android:text="Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/countryItemS"
                android:text="Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>