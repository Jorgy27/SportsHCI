<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:stretchColumns="1"
        android:background="@color/black">

        <TableRow
            android:background="@color/tigerlily">
            <TextView
                style="@style/MyText"
                android:id="@+id/athleteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="First Name"
                android:textColor="@color/black" />

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteNameItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center_horizontal"
                android:text="nameTxt"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:background="@color/tigerlily">

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Surname"
                android:textColor="@color/black" />

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteSurnameItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center_horizontal"
                android:text="Last Name"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:background="@color/tigerlily">

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="City"
                android:textColor="@color/black" />

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteCityItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center_horizontal"
                android:text="CityTxt"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:background="@color/tigerlily">

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Country"
                android:textColor="@color/black" />

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteCountryItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center_horizontal"
                android:text="CountryTxt"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:background="@color/tigerlily">

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Sport"
                android:textColor="@color/black" />

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteSportItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center_horizontal"
                android:text="SportTxt"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:background="@color/tigerlily">

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Birthday:"
                android:textColor="@color/black" />

            <TextView
                style="@style/MyText"
                android:id="@+id/athleteBirthdayItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center_horizontal"
                android:text="BirthdayTxt"
                android:textColor="@color/black" />
        </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>