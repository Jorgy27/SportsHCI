<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:id="@+id/team1"
                android:text="Team 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/team1Item"
                android:text="Team 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/team2"
                android:text="Team 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/team2Item"
                android:text="Team 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/score"
                android:text="Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/scoreItem"
                android:text="Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/date"
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/dateItem"
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/city"
                android:text="City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/cityItem"
                android:text="City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/country"
                android:text="Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/countryItem"
                android:text="Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nav_black"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>