<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:stretchColumns="1"
        android:background="@color/soothing_breeze">

        <TableRow
            android:background="@color/Biscay">
            <TextView
                android:id="@+id/teamName"
                android:text="Team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/teamNameItem"
                android:text="TeamTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textColor="@color/soothing_breeze"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:background="@color/Biscay">
            <TextView
                android:id="@+id/teamField"
                android:text="Stadium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/teamFieldItem"
                android:text="Stadium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:background="@color/Biscay">
            <TextView
                android:id="@+id/teamCity"
                android:text="City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/teamCityItem"
                android:text="CityTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:background="@color/Biscay">
            <TextView
                android:id="@+id/teamCountry"
                android:text="Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/teamCountryItem"
                android:text="CountryTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:background="@color/Biscay">
            <TextView
                android:id="@+id/teamSport"
                android:text="Sport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/teamSportItem"
                android:text="SportTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="1"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:background="@color/Biscay">
            <TextView
                android:id="@+id/teamBirthday"
                android:text="Established:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/teamBirthdayItem"
                android:text="DateEstablishedTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/soothing_breeze"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>
    </TableLayout>


</androidx.cardview.widget.CardView>