<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/white</item>
        <item name="colorPrimaryDark">@color/dracula_orchid</item>
        <item name="colorPrimary">@color/soothing_breeze</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="android:textViewStyle">@style/MyText</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyText" parent="@android:style/TextAppearance">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/soothing_breeze</item>
    </style>


</resources>